<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal"
    tools:context=".ChooseNbr">

   <!--<TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serial type :" />-->

    <TextView
        android:id="@+id/number_resistances_text"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        style="@style/TextView"
        android:text="@string/numberRest" />


    <EditText
        android:id="@+id/enter_number"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="@string/num"
        android:textColorHint="@color/colorAc"
        android:layout_below="@+id/number_resistances_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:inputType="number"
        />


    <Button
        android:id="@+id/validation_button"
        android:text="@string/validate"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/number_resistances_text"
        android:layout_centerHorizontal="true"
        android:onClick="validationNbRes"
        style="@style/Button"
        android:focusable="false"
        android:layout_alignParentBottom="false" />

    <Button
        android:id="@+id/home"
        style="@style/Button"
        android:text="@string/homeButtonText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="callHome"
        />

</RelativeLayout>
