<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" android:orientation="horizontal"
    tools:context="com.example.roland.myapplication.Result"
    >

    <TextView
        android:id="@+id/result_text_view"
        style="@style/TextView"
        android:text="@string/equivalent"
        android:layout_above="@+id/final_result"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        />

    <TextView
        android:id="@+id/final_result"
        style="@style/BarOhms"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/unity"
        style="@style/BarOhms"
        android:text="@string/resUnity"
        android:layout_alignTop="@+id/final_result"
        android:layout_alignEnd="@+id/result_text_view"
        />

    <Button
        android:id="@+id/home"
        style="@style/Button"
        android:text="@string/homeButtonText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="callHome"
        />

</RelativeLayout>
