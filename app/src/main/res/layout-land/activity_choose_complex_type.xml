<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal"
    tools:context=".ChooseComplexType"
    >

    <TextView
        android:id="@+id/text_view_choose_type"
        style="@style/TextView"
        android:text="@string/circuitType"
        />

    <Button
        android:id="@+id/serial_type_button"
        style="@style/Button"
        android:text="@string/serial"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_view_choose_type"
        android:onClick="callChooseNbr"
        android:layout_alignParentBottom="false" />

    <Button
        android:id="@+id/parallel_type_button"
        style="@style/Button"
        android:text="@string/parallel"
        android:layout_below="@id/serial_type_button"
        android:layout_marginTop="20dp"
        android:onClick="callChooseNbr"
        android:layout_alignParentBottom="false" />


    <Button
        android:id="@+id/home"
        style="@style/Button"
        android:text="@string/homeButtonText"
        android:onClick="callHome"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
